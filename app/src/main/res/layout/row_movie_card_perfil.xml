<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"

    android:layout_margin="5dp"
    android:elevation="5dp"
    android:id="@+id/row_post_movie_card_perfil"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/bgCardItemPost"
        android:layout_height="match_parent">

        <View
            android:layout_margin="12dp"
            android:visibility="gone"
            android:id="@+id/view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shap_radius_card_letra_perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPhotoMovie"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/american" />

        <TextView
            android:id="@+id/tvRowTitle"
            android:layout_width="0dp"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="#5A5A5A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/ivPhotoMovie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            tools:text="American Pie 1 dasdsa dsad sada sda dasd asda"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvWishesotals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#5A5A5A"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvRowTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvRowTitle"
            tools:text="3 Votos -"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tvPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="#5A5A5A"

            app:layout_constraintBottom_toBottomOf="@+id/tvWishesotals"
            app:layout_constraintStart_toEndOf="@+id/tvWishesotals"
            app:layout_constraintTop_toTopOf="@+id/tvWishesotals"
            app:layout_constraintVertical_bias="0.0"
            tools:text="27.0%"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>